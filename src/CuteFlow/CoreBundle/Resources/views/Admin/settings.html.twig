{% extends 'CuteFlowCoreBundle::admin.html.twig' %}
{% block title %}{{ parent() }} - {{ "admin.title.settings" | trans }}{% endblock %}

{% block body %}
<h2>{{ "admin.header.settings" | trans }}</h2>

<!-- Tab-Navigation -->
<div class="tabs">
    <ul>
        <li><a href="#" id="tab-general" {% if formType=='general' %}class="selected"{% endif %} onclick="showTab('general'); this.blur(); return false;">{{ "admin.label.general" | trans }}</a></li>
        <li><a href="#" id="tab-email" {% if formType=='email' %}class="selected"{% endif %} onclick="showTab('email'); this.blur(); return false;">{{ "admin.label.email" | trans }}</a></li>
        <li><a href="#" id="tab-workflow" {% if formType=='workflow' %}class="selected"{% endif %} onclick="showTab('workflow'); this.blur(); return false;">{{ "admin.label.workflow" | trans }}</a></li>
    </ul>
</div>

{% if saveSuccess is defined and saveSuccess==true %}
    <div class="flash notice">
        {{ "admin.message.settings_successfully_saved" | trans }}
    </div>
    <br/>
{% endif %}
{% if form is defined and form_errors(form) %}
    <div class="flash error">
        {{ form_errors(form) }}
    </div>
    <br/>
{% endif %}

{% include 'CuteFlowCoreBundle:Admin:generalTab.html.twig' %}
{% include 'CuteFlowCoreBundle:Admin:emailTab.html.twig' %}
{% include 'CuteFlowCoreBundle:Admin:workflowTab.html.twig' %}

{% endblock %}

{% block sidebarclass %}class="nosidebar"{% endblock %}
