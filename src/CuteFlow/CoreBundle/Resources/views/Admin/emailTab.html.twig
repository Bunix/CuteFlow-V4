<div id="tab-content-email" class="tab-content" {% if formType!='email' %}style="display: none;"{% endif %}>
    <form method="post" action="{{ path('cuteflow_admin_settings_save', {'formType': 'email'}) }}">
        <fieldset class="box tabular settings">
            <legend>{{ "admin.title.smtp_settings" | trans }}</legend>
            <p>
                {{ form_label(emailForm.smtpHost) }}
                {{ form_widget(emailForm.smtpHost) }}
            </p>
            <p>
                {{ form_label(emailForm.smtpPort) }}
                {{ form_widget(emailForm.smtpPort) }}
            </p>
            <p>
                {{ form_label(emailForm.smtpUser) }}
                {{ form_widget(emailForm.smtpUser) }}
            </p>
            <p>
                {{ form_label(emailForm.smtpPassword) }}
                {{ form_widget(emailForm.smtpPassword) }}
            </p>
            <p>
                {{ form_label(emailForm.smtpAuthentication) }}
                {{ form_widget(emailForm.smtpAuthentication) }}
            </p>
            <p>
                {{ form_label(emailForm.smtpEncryption) }}
                {{ form_widget(emailForm.smtpEncryption) }}
            </p>
        </fieldset>
        <fieldset class="box tabular settings">
            <legend>{{ "admin.title.send_settings" | trans }}</legend>
            <p>
                {{ form_label(emailForm.emissionMailAddress) }}
                {{ form_widget(emailForm.emissionMailAddress) }}
            </p>
            <p>
                {{ form_label(emailForm.emailFormat) }}
                {{ form_widget(emailForm.emailFormat) }}
            </p>
            <p>
                {{ form_label(emailForm.emailFooter) }}
                {{ form_widget(emailForm.emailFooter) }}
            </p>
        </fieldset>

        {{ form_rest(emailForm) }}
        
        <input type="submit" value="{{ "admin.button.save" | trans }}" name="commit"/>
    </form>
</div>
